@model IList<CategorySummaryInfo>
@using MyLibrary.Model.ViewModel
@using MyLibrary.Web.Helpers
<div class="section classification-section">
    <div class="section-header">
        <h2>分类</h2>
    </div>
    <ul class="news-list classification-nav clearfix">
        @foreach (var s in Model)
        {
            <li>
                <h2 class="joketitle">
                    <a title="@string.Format("{0}",s.CategoryName)" href="@BookHelper.GetCategoryBooks(s.PinYin)" target="_self">@s.CategoryName<em>(@s.Count)</em></a>
                </h2>
            </li>
        }
    </ul>
</div>